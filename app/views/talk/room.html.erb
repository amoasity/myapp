<%= form_with url: "/massage/create/#{@talk_room_id}" do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "post" %>
<% end %>
<% @massages.each do |massage| %>
    <% if massage.user_id == @current_user.id %>
        <p><%= massage.content %></p>
    <% else %>
        <p><%= User.find_by(id: massage.user_id).name %>/<%= massage.content %></p>
    <% end %>
<% end %>
